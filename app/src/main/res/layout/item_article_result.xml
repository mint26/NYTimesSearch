<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"

    app:cardElevation="5dp"
    android:id="@+id/cv_container"
    android:layout_width="120dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv_title"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:scaleType="center"
            android:id="@+id/iv_thumbnail"
            android:layout_below="@id/tv_title"
            android:layout_margin="@dimen/item_article_margin"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_thumbnail"
            android:id="@+id/tv_news_desk"
            android:textSize="10sp"
            android:background="@drawable/ic_blue_circle"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:paddingLeft="@dimen/item_article_padding"
            android:paddingRight="@dimen/item_article_padding"
            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_news_desk"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_lead_paragraph" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
